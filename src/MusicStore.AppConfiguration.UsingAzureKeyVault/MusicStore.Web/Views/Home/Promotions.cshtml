@model List<Album>
@{
    ViewData["Title"] = "Promotions";
}

<h1>Promotions</h1>

<div class="text-center">
    <div class="row" style="margin-top: 40px">
        @foreach (var album in Model)
        {
            <div class="col-md-3">
                <div class="card">
                    <img class="card-img-top" src="@album.AlbumArt" alt="Card image cap">
                    <div class="card-body">
                        <h4 class="card-title">@album.Artist - @album.Name</h4>
                        <feature name="@Features.PromotionDiscounts">
                            <p class="lead">Was $@album.Price</p>
                            <a href="#" class="btn btn-primary">Buy $@album.PromoPrice</a>
                        </feature>
                        <feature name="@Features.PromotionDiscounts" negate="true">
                            <a href="#" class="btn btn-primary">Buy $@album.Price</a>
                        </feature>
                    </div>
                </div>
            </div>
        }
    </div>
</div>